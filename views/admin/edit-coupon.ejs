<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Coupon</title>
    <link rel="stylesheet" href="/css/admin-coupon.css">
    <link rel="stylesheet" href="/css/admin-overview.css">

</head>
<body>
    <%- include('layout/sidebar') %>

    <div class="content1">
        <header>
            <h1>Edit Coupon</h1>
        </header>
        <section>
            <form action="/admin/admin-coupons/<%= coupon._id %>/edit" method="POST">
                <label for="code">Code:</label>
                <input type="text" id="code" name="code" value="<%= coupon.code %>" required>

                <label for="discount">Discount (%):</label>
                <input type="number" id="discount" name="discount" value="<%= coupon.discount %>" required>

                <label for="expirationDate">Expiration Date:</label>
                <input type="date" id="expirationDate" name="expirationDate" value="<%= coupon.expirationDate.toISOString().split('T')[0] %>" required>

                <label for="isActive">Active:</label>
                <input type="checkbox" id="isActive" name="isActive" value="true" <%= coupon.isActive ? 'checked' : '' %>>

                <button type="submit">Update Coupon</button>
            </form>
        </section>
    </div>
</body>
</html>
