
<!-- User Orders Page (updated) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Orders</title>
    <link rel="stylesheet" href="/css/admin-orders.css">
</head>
<body>
 
    <%- include('layout/sidebar') %>
    
    <div class="content">
        <header>
            <h1>User Orders</h1>
        </header>
        <section>
            <h2>Orders for User ID: <%= orders[0] ? orders[0].userId : 'N/A' %></h2>
            <table>
                <thead>
                    <tr>
                        <th>Sl No</th>
                        <th>Order ID</th>
                        <th>Status</th>
                        <th>Total Price</th>
                        <th>Order Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (orders.length > 0) { %>
                        <% orders.forEach((order,index) => { %>
                          

                            <tr>
                                <td><%= index + 1 %></td>
                                <td><a href="/admin/orders/<%= order._id %>"><%= order._id %></a></td>
                                <td><%= order.status %></td>
                                <td>$ <%= order.totalAmount %>.00</td>
                                <td><%= order.orderDate.toISOString().split('T')[0] %></td>
                            </tr>
                            
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6">No orders found for this user.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </section>
    </div>
  

    
    <%- include('layout/logout') %>
</body>
</html>
