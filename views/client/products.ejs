<!doctype html>
<html lang="en">
<head>
  <%- include('layout/head') %>
	</head>

	<body>

		<!-- Start Header/Navigation -->
		<%- include('layout/navbar') %>
		<!-- End Header/Navigation -->

		<!-- Start Hero Section -->
			<div class="hero">
				<div class="container">
					<div class="row justify-content-between">
						<div class="col-lg-5">
							<div class="intro-excerpt">
								<h1>Shop</h1>
							</div>
						</div>
						<div class="col-lg-7">
							
						</div>
					</div>
				</div>
			</div>
		<!-- End Hero Section -->

		

		<div class="untree_co-section product-section before-footer-section">
		    <div class="container">
		      	<div class="row">

		      		<!-- Start Column 1 -->
							<% products.forEach((product, index) => { %>
					<div class="col-12 col-md-4 col-lg-3 mb-5">
						<a class="product-item" href="#">
							<img src="/uploads/<%= product.image %>" class="img-fluid product-thumbnail">
							<h3 class="product-title"><%= product.name %></h3>
							<strong class="product-price">$ <%=product.price%>.00</strong>

							<span class="icon-cross">
								
									<button class="cart-button" onclick="addToCart('<%= product.id %>')">Add to Cart</button>
								
								
							</span>
						</a>
					</div> 
					<!-- End Column 1 -->
					<% }) %>

		      	</div>
		    </div>
		</div>


		<!-- Start Footer Section -->
		<footer class="footer-section">
			<%- include('layout/footer') %>
		</footer>
		<!-- End Footer Section -->	


		<script src="js/bootstrap.bundle.min.js"></script>
		<script src="js/tiny-slider.js"></script>
		<script src="js/custom.js"></script>
	
<script>
	// Initialize cart count
	let cartCount = 0;

	function addToCart(productId) {
			cartCount++;
			document.getElementById("cartCount").innerText = cartCount;
			
			fetch('/add-to-cart', {
					method: 'POST',
					headers: {
							'Content-Type': 'application/json'
					},
					body: JSON.stringify({ productId: productId }) 
			})
			.then(response => response.json())
			.then(data => {
					console.log(data.message); 
					// Optionally update the cart display or show a success message
			})
			.catch(error => console.error('Error:', error));
	}
</script>

		
	</body>

</html>